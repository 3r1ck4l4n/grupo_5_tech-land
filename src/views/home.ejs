<!DOCTYPE html>
<html lang="es-mx">
  <head>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/home/bodyStyles.css" />
    <link rel="stylesheet" href="/css/home/carruselStyle.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Welcome to "Tech Land"!</title>
  </head>

  

<body>
  <header>
    <div class="header-top">
      <div class="container-logo">
        <a href="/home"><img src="/images/techLand2White.png" class="tech-land-logo" alt="tech-land-logo" /></a>
      </div>

      <div class="search-box">
        <form action="#" method="POST">
          <input type="text" name="search" id="search" placeholder="Search for anything" required /><button type=""
            class="button-search">
            <i class="fab fa-searchengin fa-lg"></i>
          </button>
        </form>
      </div>
      <div class="shoppingCart">
        <a href="/productCart"><i class="fas fa-shopping-cart fa-lg"></i></a>
      </div>
    </div>
    <nav class="header-nav">
      <ul class="service-options">
        <li><a href="#">Novedades</a></li>
        <li><a href="#">Productos destacados</a></li>
        <li><a href="#">Favoritos</a></li>
        <li><a href="#">Centro de información</a></li>
      </ul>
      <ul class="user-options">
        <li>
          <a href="/login">Log in <i class="fas fa-sign-in-alt"></i></a>
        </li>
        <li>
          <a href="/register">Sign up <i class="fas fa-user-plus"></i></a>
        </li>
        <li>
          <div class="search-box-mobile">
            <form action="#" method="POST">
              <input type="text" name="search" id="search" placeholder="Search for anything" required /><button type=""
                class="button-search">
                <i class="fab fa-searchengin fa-lg"></i>
              </button>
            </form>
          </div>
        </li>
      </ul>
      <div class="shoppingCart-mobile">
        <a href="/productCart"><i class="fas fa-shopping-cart fa-lg"></i></a>
      </div>
    </nav>
    <div class="container-barMenu">
      <i class="fas fa-bars barMenu fa-lg"></i>
    </div>
    <%- include('./partials/carrusel')%>
  </header>

  <main class="firstContent">
    <h2 class="titleMain">Productos Destacados:</h2>
    <section class="featuredProducts">
      <% listOfProducts.forEach(product => { %>
      <a href="/productDetail/<%= product.id %>">
        <article class="Item">
          <img class="itemImage" src="<%= product.img %>" alt="Core-i9" />
          <div class="specifications">
            <h3 class="titleItem">
              <%= product.name %>              
            </h3>
            <p class="price">$ <%= product.price %></p>
            <p class="recommendations"><a href="#">Articulos similares</a></p>
          </div>
        </article>
      </a>
      <% }) %>
      

    </section>

    <h2 class="titleMain">Productos en Promoción:</h2>
    <a href="/productDetail">
      <section class="promotionalProducts">
        <article class="Item">
          <img class="itemImage" src="/images/home/GabineteNZXT.jpg" alt="GabineteNZXT" />
          <div class="specifications">
            <h3 class="titleItem">
              Gabinete NZXT H510 Elite con Ventana RGB, Midi-Tower.
            </h3>
            <p class="discount">-15% ¡$585.00 menos!</p>
            <p class="moreOffers"><a href="#">Otras ofertas similares</a></p>
          </div>
        </article>
    </a>

    <a href="/productDetail">
      <article class="Item">
        <img class="itemImage img-short" src="/images/home/tecladoXzeal.jpg" alt="GabineteNZXT" />
        <div class="specifications">
          <h3 class="titleItem">
            Teclado Gamer XZEAL XZ1020, Teclado Mecánico.
          </h3>
          <p class="discount">-10% ¡$75.00 menos!</p>
          <p class="moreOffers"><a href="#">Otras ofertas similares</a></p>
        </div>
      </article>
    </a>

    <a href="/productDetail">
      <article class="Item">
        <img class="itemImage" src="/images/home/mouseEvga.jpg" alt="GabineteNZXT" />
        <div class="specifications">
          <h3 class="titleItem">
            Gabinete NZXT H510 Elite con Ventana RGB, Midi-Tower
          </h3>
          <p class="discount">-8% ¡$90.00 menos!</p>
          <p class="moreOffers"><a href="#">Otras ofertas similares</a></p>
        </div>
      </article>
    </a>

    <a href="/productDetail">
      <article class="Item">
        <img class="itemImage img-short" src="/images/home/ramCorsair.jpg" alt="RamCorsair" />
        <div class="specifications">
          <h3 class="titleItem">
            Memoria RAM Corsair Vengeance DDR3, 1600MHz, 8GB.
          </h3>
          <p class="discount">-20% ¡$180.00 menos!</p>
          <p class="moreOffers"><a href="#">Otras ofertas similares</a></p>
        </div>
      </article>
    </a>
    </section>
  </main>

  <footer class="footerContainer">
    <section>
      <article class="footerItem">
        <h4 class="footerTitle">Follow Us</h4>
        <ul class="follow-us">
          <li>
            <a href="#"><i class="fab fa-facebook fa-2x footer-icon-mobile"></i></a>
            <a href="#"><span class="nameItemfooter">Facebook: <i class="fab fa-facebook fa-lg"></i></span></a>
          </li>
          <li>
            <a href="#"><i class="fab fa-twitter-square fa-2x footer-icon-mobile"></i></a>
            <a href="#"><span class="nameItemfooter">Twitter: <i class="fab fa-twitter-square fa-lg"></i></span></a>
          </li>
          <li>
            <a href="#"><i class="fab fa-instagram-square fa-2x footer-icon-mobile"></i></a>
            <a href="#"><span class="nameItemfooter">Instagram:
                <i class="fab fa-instagram-square fa-lg"></i></span></a>
          </li>
          <li>
            <a href="#"><i class="fab fa-github fa-2x footer-icon-mobile"></i></a>
            <a href="#"><span class="nameItemfooter">Git-Hub: <i class="fab fa-github fa-lg"></i></span></a>
          </li>
        </ul>
      </article>

      <article class="footerItem">
        <h4 class="footerTitle">Contact Us</h4>
        <ul class="contactFooter">
          <li class="contactFooterItem">Call: +52 55 XX XX XX XX</li>
          <li class="contactFooterItem">E-mail: something@someadress.com</li>
        </ul>
      </article>

      <article class="footerItem">
        <h4 class="footerTitle">Subscribe to the newsletter.</h4>
        <form class="footerFormMobile" action="#" method="POST">
          <input type="email" placeholder="something@someadress.com" required />
          <button type="submit">Subscribe</button>
        </form>
      </article>
    </section>
  </footer>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>