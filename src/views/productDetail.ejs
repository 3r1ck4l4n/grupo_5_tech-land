<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/productDetailStyles.css">
    <title>Detalle</title>    
  </head>
  

<body>
  <header>
    <div class="header-top">
      <div class="container-logo">
        <a href="/home"><img src="/images/techLand2White.png" class="tech-land-logo" alt="tech-land-logo" /></a>
      </div>

      <div class="search-box">
        <form action="#" method="POST">
          <input type="text" name="search" id="search" placeholder="Search for anything" required /><button type=""
            class="button-search">
            <i class="fab fa-searchengin fa-lg"></i>
          </button>
        </form>
      </div>
      <div class="shoppingCart">
        <a href="/productCart"><i class="fas fa-shopping-cart fa-lg"></i></a>
      </div>
    </div>
    <nav class="header-nav">
      <ul class="service-options">
        <li><a href="#">Novedades</a></li>
        <li><a href="#">Productos destacados</a></li>
        <li><a href="#">Favoritos</a></li>
        <li><a href="#">Centro de información</a></li>
      </ul>
      <ul class="user-options">
        <li>
          <a href="/login">Log in <i class="fas fa-sign-in-alt"></i></a>
        </li>
        <li>
          <a href="/register">Sign up <i class="fas fa-user-plus"></i></a>
        </li>
        <li>
          <div class="search-box-mobile">
            <form action="#" method="POST">
              <input type="text" name="search" id="search" placeholder="Search for anything" required /><button type=""
                class="button-search">
                <i class="fab fa-searchengin fa-lg"></i>
              </button>
            </form>
          </div>
        </li>
      </ul>
      <div class="shoppingCart-mobile">
        <a href="/productCart"><i class="fas fa-shopping-cart fa-lg"></i></a>
      </div>
    </nav>
    <div class="container-barMenu">
      <i class="fas fa-bars barMenu fa-lg"></i>
    </div>
    <div class="banner">
      <img src="/images/home/banner1.jpg" alt="banner1" />
    </div>
  </header>

    <main>
        <section class="main-section-product">
            <header class="product-name"><h1><%=item.name%></h1></header>
            <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
            </div>
            <main class="product-card">                
               
                <div class="image-product">
              <img src="<%=item.img%>" alt="product-preview">
                </div>
                
                <div class="product-card-2nd-box">
                    <div class="main-features">                  
                        <div class="icon-main-feature">
                          <i class="fas fa-memory"></i>
                            <p><%=item.mainFeature1%></p>
                        </div>    
                        <div class="icon-main-feature">
                            <i class="fas fa-memory"></i>
                              <p><%=item.mainFeature2%></p>
                        </div>
                        <div class="icon-main-feature">
                          <i class="fas fa-memory"></i>
                            <p>A main feature</p>
                        </div>
                        <div class="icon-main-feature">
                            <i class="fas fa-memory"></i>
                              <p>A main feature</p>
                        </div>
                    </div>
      
                    <div class="price">
                        <label for="price-number">Precio:</label>
                        <p id="price-number">$ <%=item.price%> MX</p>
                    </div>
      
                    <div>
                        <button class="cta-add-to-car">
                          <i class="fas fa-cart-plus"></i>
                            Agregar al carrito
                        </button>
                    </div>
                </div>
                
            </main>
        </section>

        
        <section class="product-description">
            <h2 class="title">
                Descripción del producto
            </h2>
            <div class="text-description">
                <p>
                    <%=item.description%>
                </p>
            </div>
        </section>

        <section class="specficactions">
            <h2 class="title">
                Especificaciones técnicas
            </h2>
            <div>
                <table class="specifications-table">
                    <colgroup>
                        <col class="name-of-feature">                                            
                    </colgroup>
                    <tr>
                        <th>Característica</th>
                        <th>Descripción</th>
                    </tr>

                    <tr>
                        <td>a value</td>
                        <td>another value</td>
                    </tr>
                    
                    <tr>
                        <td>a value</td>
                        <td>another value</td>
                    </tr>

                    <tr>
                        <td>a value</td>
                        <td>another value</td>
                    </tr>

                    <tr>
                        <td>a value</td>
                        <td>another value</td>
                    </tr>
                  
                </table>
            </div>
        </section>

        <%- include("partials/recommendations") %>

        <section class="reviews">
            <h2 class="title">
                Reseñas del producto
            </h2>
            <div class="list-of-reviews">
                <div class="card-review">
                    <header>
                        <div class="review-image">
                            <img src="/images/pexels-pixabay-220453.jpg" alt="profile-picture">
                         </div>
                   
                        <div class="name-date-stars">
                            <p class="user-name">Nombre de usuario</p>
                            <p class="date-of-review">31/enero/2045</p>
                            <div class="stars-review-one-user">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </header>    
                        <p class="user-review-text">
                            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eos tempora dolorum reiciendis quasi harum, error minus magni corporis, fugiat nulla odio doloribus et architecto maiores doloremque praesentium. Minima, illo minus.
                        </p>
                </div>

                <div class="card-review">
                    <header>
                        <div class="review-image">
                            <img src="/images/pexels-pixabay-220453.jpg" alt="profile-picture">
                         </div>
                   
                        <div class="name-date-stars">
                            <p class="user-name">Nombre de usuario</p>
                            <p class="date-of-review">31/enero/2045</p>
                            <div class="stars-review-one-user">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </header>    
                        <p class="user-review-text">
                            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eos tempora dolorum reiciendis quasi harum, error minus magni corporis, fugiat nulla odio doloribus et architecto maiores doloremque praesentium. Minima, illo minus.
                        </p>
                </div>
            </div>
        </section>

      
    </main>

    <footer class="footerContainer">
        <section>
          <article class="footerItem">
            <h4 class="footerTitle">Follow Us</h4>
            <ul class="follow-us">
              <li>
                <a href="#"><i class="fab fa-facebook fa-2x footer-icon-mobile"></i></a>
                <a href="#"><span class="nameItemfooter">Facebook: <i class="fab fa-facebook fa-lg"></i></span></a>
              </li>
              <li>
                <a href="#"><i class="fab fa-twitter-square fa-2x footer-icon-mobile"></i></a>
                <a href="#"><span class="nameItemfooter">Twitter: <i class="fab fa-twitter-square fa-lg"></i></span></a>
              </li>
              <li>
                <a href="#"><i class="fab fa-instagram-square fa-2x footer-icon-mobile"></i></a>
                <a href="#"><span class="nameItemfooter">Instagram:
                    <i class="fab fa-instagram-square fa-lg"></i></span></a>
              </li>
              <li>
                <a href="#"><i class="fab fa-github fa-2x footer-icon-mobile"></i></a>
                <a href="#"><span class="nameItemfooter">Git-Hub: <i class="fab fa-github fa-lg"></i></span></a>
              </li>
            </ul>
          </article>
    
          <article class="footerItem">
            <h4 class="footerTitle">Contact Us</h4>
            <ul class="contactFooter">
              <li class="contactFooterItem">Call: +52 55 XX XX XX XX</li>
              <li class="contactFooterItem">E-mail: something@someadress.com</li>
            </ul>
          </article>
    
          <article class="footerItem">
            <h4 class="footerTitle">Subscribe to the newsletter.</h4>
            <form class="footerFormMobile" action="#" method="POST">
              <input type="email" placeholder="something@someadress.com" required />
              <button type="submit">Subscribe</button>
            </form>
          </article>
        </section>
    </footer>
    
</body>
</html>