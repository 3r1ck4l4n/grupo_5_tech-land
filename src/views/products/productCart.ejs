<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700;900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/productDetailStyles.css">
        <link rel="stylesheet" href="/css/productCartStyles.css">
        <script src="/js/productCardForCart.js"></script>
        <title>ProductCart</title>       
    </head>


<body>
    <header>
        <%- include('../partials/header')%>
    </header>

    <% let total = 0; %>
    <main>
        <section class="top">
            <h1 class="main-title">
                Mi carrito de compras
            </h1>

            <div class="subtotal">
                <p class="sub-name">
                    Subtotal:
                </p>
                <p class="sub-number">
                    $ 000.00
                </p>
            </div>

            <div class="pay-button">
                <button>
                    Pagar
                </button>
            </div>

            <div class="label-price">
                <p>
                    Precio
                </p>
            </div>
        </section>
    
        <section class="list-of-p-and-pay">

            <section class="list-of-p-and-pay-one">
                <section class="list-of-items-to-pay">
                    <%response.forEach(item=> {%>
                        <%- include('../partials/productCardForCart', {item: item})%>

                    <%total = item.total_price%>
                    <%})%>
                </section>
    
                <section class="to-pay">
                    <div class="subtotal-to-pay">
                        <p class="name-to-pay">
                            Subtotal:
                        </p>
                        <p class="number-to-pay">
                            $ <%= total%>
                        </p>
                    </div>
                    <div class="shipping">
                        <p class="name-to-pay">
                            Envío:
                        </p>
                        <% let envio = 99%>
                        <p class="number-to-pay">
                            $ <%= envio%>
                        </p>
                    </div>
                    <div class="total">
                        <p class="name-to-pay">
                            Total:
                        </p>
                        <p class="number-to-pay">
                            $ <%= envio+total%>
                        </p>
                    </div>
        
                    <div class="pay-button">
                        <button>
                            Pagar
                        </button>
                    </div>   
                </section>
            </section>

            
            
    
            <section class="to-pay-desktop">
                <div class="subtotal-to-pay">
                    <p class="name-to-pay">
                        Subtotal:
                    </p>
                    <p class="number-to-pay">
                        $ 000.00
                    </p>
                </div>
                <div class="shipping">
                    <p class="name-to-pay">
                        Envío:
                    </p>
                    <p class="number-to-pay">
                        $ 000.00
                    </p>
                </div>
                <div class="total">
                    <p class="name-to-pay">
                        Total:
                    </p>
                    <p class="number-to-pay">
                        $ 000.00
                    </p>
                </div>
    
                <div class="pay-button">
                    <button>
                        Pagar
                    </button>
                </div>   
            </section>
    
        </section>
    
        
    </main>
    
    <%- include('../partials/footer')%>  
    
</body>
</html>