<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap"
      rel="stylesheet"
    />    
    <link href="/css/normalize.css" rel="stylesheet" />    
    <link href="/css/home/formStyles.css" rel=stylesheet>  
    <link href="/css/product/productCreate.css" rel="stylesheet" />  
    <script src="/js/productCreateValidation.js"></script>        
    <script async src="/js/preview.js"></script>
    <title>Agregar producto</title>
  </head>
  <body>
    <header>
      <%- include('../partials/header')%> 
    </header>

    <main>
      <section>
        <h1> <i class="fas fa-plus-circle"></i> Agregar producto</h1>
        <form action="/products" method="POST" enctype="multipart/form-data">
          <div class="validationsF">
            <ul>              
            </ul>
          </div>  
          <section class = columns>
            <!-- <img 
              src="/images/home/i9.jpg" 
              alt="product-image" 
              class = "product-image"
            >  -->
            <!-- <label for="product-image">Imagen del producto</label> -->
            <!-- <div class = "preview">
                <input type="file" name="product-image" id="file">
            </div> -->
            <div id = "preview">
            </div> 
          </section>
          <section class = columns>
          <div>
            <label for="name_product">Nombre del producto</label>
            <input
              size="20px"
              type="text"
              class="input"
              id="name_product"
              value="<%= locals.errors && locals.oldData ? oldData.name_product : null %>"
              name="name_product"
              placeholder="  Nombre del producto"
              required
              minlength="3"
            />
            
            <% if(locals.errors && errors.name_product){ %>
              <div class="errors"><%= errors.name_product.msg %></div>
            <% } %>

          </div>
          <div>
            <label for="description">Descripción</label>
            <textarea 
            name="description" 
            id="description" 
            cols="4" class="input-description"
            ><%= locals.errors && locals.oldData ? oldData.description : null %></textarea>

            <% if(locals.errors && errors.description){ %>
              <div class="errors"><%= errors.description.msg %></div>
            <% } %>

          </div>
          <label for="image_product">Imagen del producto</label>
              <input type="file" name="image_product" id="file" class = "input-image" />

              <% if(locals.errors && errors.image_product){ %>
                <div class="errors"><%= errors.image_product.msg %></div>
              <% } %>

          <div>
            <label for="category">Categoría</label>
            <select name="category" id="category" class="input">
                <option value="Perifericos">Perifericos</option>
                <option value="Equipos de computo"> Equipos de computo</option>
                <option value="Laptops"> Laptops</option>
                <option value="Monitores"> Monitores</option>
                <option value="Procesadores">Procesadores</option>
                <option value="Tarjetas madre"> Tarjetas Madre</option>
                <option value="Tarjetas de video">Tarjetas de video</option>
                <option value="Disipadores y enfriamiento">Disipadores y Enfriamiento</option>
                <option value="PC Gamer">PC Gamer</option>
                <option value="Almacenamiento">Almacenamiento</option>
                <option value="Memorias">Memorias</option>
                <option value="Otra">Otra</option>

            </select>                
          </div>
          <div> 
            <label for="brand">Marca</label>
            <select name="brand" id="brand" class="input">
                <option value="Acer">Acer</option>
                <option value="Adata">Adata</option>
                <option value="AlienWare">AlienWare</option>
                <option value="AMD">AMD</option>
                <option value="Aorus">Aorus</option>
                <option value="Apple">Apple</option>
                <option value="Asus">Asus</option>
                <option value="Dell">Dell</option>
                <option value="EVGA">EVGA</option>
                <option value="Gigabyte">Gigabyte</option>
                <option value="HP">HP</option>
                <option value="Huawei">Huawei</option>
                <option value="HyperX">HyperX</option>
                <option value="Intel">Intel</option>
                <option value="Kingston">Kingston</option>
                <option value="Lenovo">Lenovo</option>
                <option value="MSI">MSI</option>
                <option value="Nvidia">Nvidia</option>
                <option value="Samsung">Samsung</option>
                <option value="Sony">Sony</option>
                <option value="Otro">Otro</option>
            </select>
          </div>
          <div class="form-input"> 
            <label for="price">Precio</label>
            <input type="number" 
            name="price" 
            value="<%= locals.errors && locals.oldData ? oldData.price : null %>"
            id="price" 
            class="input" 
            placeholder="Precio" 
            required
            >

            <% if(locals.errors && errors.price){ %>
              <div class="errors"><%= errors.price.msg %></div>
            <% } %>

          </div>
              <div class="form-input">
                  <label for="stock">Stock disponible</label>
                  <input type="number" 
                  name="stock" 
                  value="<%= locals.errors && locals.oldData ? oldData.stock : null %>"
                  id="stock" 
                  class="input" 
                  placeholder="Stock" 
                  required
                  >

                  <% if(locals.errors && errors.stock){ %>
                    <div class="errors"><%= errors.stock.msg %></div>
                  <% } %>

              </div>
          <div class="form-input">
            <label for="type">Tipo: </label>
            <select name="type" id="type" class= "input">
              <option value="Destacados" selected>Destacados</option>
              <option value="Agregados recientemente">Agregados recientemente</option>
              <option value="Más vendidos">Más vendidos</option>
              <option value="En oferta">En oferta</option>
            </select>
          </div>
          <button type="submit" class="register-button">Enviar</button>
        </section>
        </form>
      </section>
    </main>

    <%- include('../partials/footer')%>

  </body>
</html>
